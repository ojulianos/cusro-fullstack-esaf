{% extends "templates/logado.twig" %}

{% block content %}
<h1>{{ title }}</h1>

<table class="table table-striped table-sm">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nome</th>
            <th scope="col">Email</th>
            <th scope="col">
                <a href="?page=create">Novo Usuario</a>
            </th>
        </tr>
    </thead>
    <tbody>
        {% for usuario in usuarios %}
        <tr>
            <td>{{ usuario.id }}</td>
            <td>{{ usuario.name }}</td>
            <td>{{ usuario.email }}</td>
            <td>
                <a href="?page=edit&id={{ usuario.id }}" class="text-success">Editar</a>
                <a href="javascript:void(0)" onclick="deleteItem({{ usuario.id }})" class="text-danger">Excluir</a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<script>
    function deleteItem(id) {
        if (confirm("Deseja realmente apagar o usuario?")) {
            window.location.href = "?page=delete&id=" + id;
        }
    }
</script>
{% endblock %}